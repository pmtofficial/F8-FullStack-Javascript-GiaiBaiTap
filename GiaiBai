Bài 6 : // Sửa code tại vị trí dấu [3 chấm]

function run(a, h) {
    var s = a * h / 2
    
    return s;
}

Bài 7 : // Sửa code tại vị trí dấu 3 chấm

function run(sum, different) {
    var a = (sum + different) / 2;
    var b = sum - a;
        
    return 'a is ' + a + ' and b is ' + b;
}

Bài 8 : function run(minutes) {
    var seconds = minutes * 60;

    return seconds;
}

Bài 9 : // Làm bài tập tại đây

function run(a, b, h) {
    s = 1 / 2 * h * ( a + b )

    return s;
}
Bài 10 : // Làm bài tập tại đây

function run(a, b) {
    ++a;
    --b;

    return 'a is ' + a + ' and b is ' + b;
}
Bài 11 : // Làm bài tập tại đây

function run(a, b) {
    var c = --a;
    var d = ++b;

    return 'c is ' + c + ' and d is ' + d;
}

Bài 12 : // Làm bài tập tại đây

function run(x, y, z) {
    x *= 2;
    y /= 3;
    z %= 2;

    return 'x is ' + x + ' and y is ' + y + ' and z is ' + z;
}

