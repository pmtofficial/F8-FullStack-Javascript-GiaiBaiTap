     let result;
                  if (title.indexOf('Javascript') != -1 && description.indexOf('Javascript') != -1 ) {
                      result = true;
                  }
                  else {
                      result = false;
                  }

    return result;
}

Bài 33 : 
function run(title) {
    const language = title.slice(4, 14),
           rest = title.slice(14);
    return `Language is ${language} and rest is ${rest}`;
}

Bài 34 : 

function run(content) {
    return content.replace(/JS và js/g, 'Javascript và js' )
     && content.replace(/JS/g, "Javascript" )
}

Bài 35 : 

function run(a, b) {
    a = a.toLowerCase();
    b = b.toUpperCase();
    return a + '|' + b;
}

bài 36 : 

function trimText(statusText) {
    return statusText.trim();
}
